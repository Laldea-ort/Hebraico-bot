print("Ajuda Hebraico\n")#Começa o programa  

Ph = input("Você quer aprender ou fazer um quiz? (quiz = 1/aprender = 2) ")#Pergunta se o usuário quer aprender ou fazer um quiz

serie = None
serieA = None

def quiz():
  print("\nBem-vindo ao Quiz de Ajuda Hebraico!\n")
  return None
def aprender():
  print("Oi vamos começar o aprendizado!\n")
if Ph == "1":
  print(quiz())
  serie = input("Qual é a sua série? (porfavor responda em numeros)")
elif Ph == "2":
  print(aprender())
  serieA = input("Qual é a sua série? (porfavor responda em numeros)")
def Sexto():
  pontos = 60

  primeiraP = input("Traduza para hebraico: Preto e Branco\n")
  if primeiraP in [
      "Shachol ve lavan", "shachol ve lavan", "shachol ve Lavan "
  ]:
    print("Correto! Vamos para a próxima\n")
    print(f"{pontos}/60")
  else:
    print("Errado! A resposta correta é 'Shachol ve lavan'!\n")
    pontos -= 1
    print(f"{pontos}/60\n")

  segundaP = input("Fale 'meu nome é Bia.', em hebraico.\n")
  if segundaP in [
      "Ani Bia", "A shem sheli Bia", "ani bia", "a shem sheli bia"
  ]:
    print("Correto! Vamos para a próxima\n")
    print(f"{pontos}/60")
  else:
    print("Errado! A resposta correta é 'Ani Bia' ou 'A shem shelí Bia'!\n")
    pontos -= 1
    print(f"{pontos}/60\n")

  terceiraP = input(
      "Quais são as cores da Bandeira de Israel(responda em hebraico)?\n")
  if terceiraP in ["lavan ve kachol", "Lavan ve kachol", "Lavan ve Kachol"]:
    print("Correto! Vamos para a próxima\n")
    print(f"{pontos}/60")
  else:
    print("Errado! A resposta correta é 'kachol ve lavan'!\n")
    pontos -= 1
    print(f"{pontos}/60\n")

  quartaP = input("Qual cor se obtém quando misturamos amarelo com azul?\n")
  if quartaP in ["yarok", "Yarok", "YAROK"]:
    print("Correto! Vamos para a próxima\n")
    print(f"{pontos}/60")
  else:
    print("Errado! A resposta correta é 'yarok'!\n")
    pontos -= 1
    print(f"{pontos}/60\n")

  quintaP = input("Quais são as cores da bandeira do Brasil?\n")

  if quintaP in ["kachol ve yarok ve tzahov", "Kachol ve yarok ve tzahov"]:
    print("Correto! Vamos para a próxima\n")
    print(f"{pontos}/60")
  else:
    print("Errado! A resposta correta é 'yarok ve kachol ve tzahov'!\n")
    pontos -= 1
    print(f"{pontos}/60\n")

  sextaP = input("Como é você no masculino, em hebraico?\n")

  if sextaP in ["Ata", "ata", "ATA"]:
    print("Correto! Vamos para a próxima\n")
    print(f"{pontos}/60\n")
  else:
    print("Errado! A resposta correta é 'ata'!\n")
    pontos -= 1
    print(f"{pontos}/60\n")

  setimaP = input("Como é você no feminino, em hebraico?\n")

  if setimaP in ["At", "at", "AT"]:
    print("Correto! Vamos para a próxima\n")
    print(f"{pontos}/60")
  else:
    print("Errado! A resposta correta é 'at'!\n")
    pontos -= 1
    print(f"{pontos}/60\n")

  oitavaP = input("Traduza para hebraico: 'Ela é a Bia'.\n")

  if oitavaP in ["Hi Bia", "hi bia", "HI BIA"]:
    print("Correto! Vamos para a próxima\n")
    print(f"{pontos}/60")
  else:
    print("Errado! A resposta correta é 'Hi Bia'!\n")
    pontos -= 1
    print(f"{pontos}/60\n")
def Setimo():
  pontos = 60

  primeiraP = input("Traduza para hebraico: 'Eu estou feliz'")

  if primeiraP in ["Ani Sameach", "ani sameach", "ANI SAMEACH"]:
    print("Correto! Vamos para a próxima\n")
    print(f"{pontos}/60")
  else:
    print("Errado! A resposta correta é 'Ani Sameach' ou 'Ani Smechá'!\n")
    pontos -= 1
    print(f"{pontos}/60\n")
    
  segundaP = input("Traduza para hebraico: 'Eu gosto de maças', no masculino")

  if segundaP in ["Ani Ohev Tapuach", "ani ohev tapuach", "ANI OHEV TAPUACH"]:
    print("Correto! Vamos para a próxima\n")
    print(f"{pontos}/60")
  else:
    print("Errado! A resposta correta é 'Ani ohev tapuach'!\n")
    pontos -= 1
    print(f"{pontos}/60\n")

  terceiraP = input("Traduza para hebraico: 'Eu moro em Copacabana', no masculino")

  if segundaP in ["Ani gar be Copacabana", "ani gar be copacabana", "ANI GAR BE COPACABANA"]:
      print("Correto! Vamos para a próxima\n")
      print(f"{pontos}/60")
  else:
      print("Errado! A resposta correta é 'Ani gar be Copacabana'!\n")
      pontos -= 1
      print(f"{pontos}/60\n")
def SextoA():
  print("\nCores:Tsbaim:צבעים\n")
  print(
      "Cores Primárias:tsbaim yesud:צבעי יסוד\nAzul - Kachol(כְּחוֹל)\nVermelho - Adom(אָדוֹם)\nAmarelo - Tzahov(צָהוֹב)\n"
  )
  print(
      "Outras cores:tsbaim acharim:צבעים אחרים\nVerde - yarok(יָרוֹק)\nMarrom - Chum(חוּם)\nBranco - Lavan(לָבָן)\nPreto - Shachol(שָׁחוֹר)\nRosa - Verad(וָרוֹד)\nRoxo - Sagol(סָגוֹל)"
  )
if serie == "6":
  print("Vamos lá")
  print(Sexto())
if (serieA == "6"):
  print(SextoA())
if serie == "7":
  print("Vamos lá")
  print(Setimo())
